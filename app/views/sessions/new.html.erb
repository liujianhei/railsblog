<h1>Sign in</h1>
  <%= form_for(:session, url: sessions_path, html:{:class => "form-horizontal"}) do |f| %>

  <div class="control-group">
    <div class="control-label">
      <%= f.label :email %>
    </div>
    <div class="controls">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="control-group">
    <div class="control-label">
      <%= f.label :password %>
    </div>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    </div>
  </div>
  <% end %>

