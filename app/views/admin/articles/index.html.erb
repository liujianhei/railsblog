<%= link_to 'New Article', new_admin_article_path %>
<table class="table table-striped table-hover">
<% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.title, admin_article_path(article) %>&nbsp;&nbsp;(<%= format_date(article.created_at) %>)</td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', admin_article_path(article),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
